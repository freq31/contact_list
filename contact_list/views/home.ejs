<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="contact-list-head">My Contact Lists</h1>
        <div>
            <ul id="contact-list">
                <li>
                    <div id="contact-details">
                        <p class="name">NAME</p>
                        <p class="phone">PHONE</p>

                    </div>
                    
                </li>
                <%for (let i of contactList){%>
                    <li>
                        <div id="contact-details">
                            <p class="name"><%= i.name%></p>
                            <p class="phone"><%= i.phone%></p>

                        </div>
                        
                        <div id="delete-icon">
                            <a href="/delete-contact/?id=<%= i._id %>"><i class="fas fa-window-close"></i></a>
                        </div>
                    </li>
                    
                    <%}%>

            </ul>

        </div>
        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="enter name" autocomplete="name">
            <input type="number" name="phone" placeholder="enter phone" >
            <button type="submit">Add Contact</button>
        </form>
     <script type="text/javascript" src="/js/home.js"></script>   
    </body>

</html>